// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              String     @id
  createdAt       DateTime
  updatedAt       DateTime?
  email           String
  phoneNumber     String?
  role            String?
  status          Int
  name            String?
  lastname        String?
  isDeleted       Boolean
  birthdate       DateTime?
  profileImageUrl String?
  password        String
  token           String @db.VarChar(250)
  // extra
  contents        Content[]
  hitos           Hito[]     // Relación con la tabla intermedia "Hito"
}

model Content {
  id          String     @id
  createdAt   DateTime
  updatedAt   DateTime?
  title       String?
  text        String?
  role        String?
  type        Int
  status      Int
  publisher   User       @relation(fields: [publisherId], references: [id])
  categoryId  Int?
  category    ContentCategory? @relation(fields: [categoryId], references: [id])
  publisherId String
  // extra
  hitos       Hito[]     // Relación con la tabla intermedia "Hito"
}

model ContentCategory {
  id        Int       @id @default(autoincrement())
  createdAt DateTime
  updatedAt DateTime?
  icon      String?
  name      String?
  // extra
  contents  Content[]
}

model Hito {
  id        Int      @id @default(autoincrement())
  createdAt DateTime
  updatedAt DateTime?
  name      String
  contents  Content[]
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

