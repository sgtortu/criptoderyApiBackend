// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              String     @id
  createdAt       DateTime
  updatedAt       DateTime?
  email           String
  phoneNumber     String?
  role            String?
  status          Int
  name            String?
  lastname        String?
  isDeleted       Boolean
  birthdate       DateTime?
  profileImageUrl String?
  password        String
  token           String @db.VarChar(250)
  // relation
  cards           Card[]
  nodes           Node[]
  blocks          Block[]
}

model Card {
  id          String     @id
  createdAt   DateTime
  updatedAt   DateTime?
  title       String?
  text        String?
  role        String?
  type        Int
  status      Int
  publisher   User       @relation(fields: [publisherId], references: [id])
  // relation
  nodeId  Int?
  node    Node? @relation(fields: [nodeId], references: [id])
  publisherId String
}

model Node {
  id        Int       @id @default(autoincrement())
  createdAt DateTime
  updatedAt DateTime?
  icon      String?
  name      String?
  // relation
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  blockId  Int?
  block    Block? @relation(fields: [blockId], references: [id])
  cards  Card[]
}

model Block {
  id        Int      @id @default(autoincrement())
  createdAt DateTime
  updatedAt DateTime?
  name      String
  icon      String?
  // relation
  nodes     Node[]
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

